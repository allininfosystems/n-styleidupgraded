<?xml version="1.0"?>
<config>
    <default>
        <faq>
            <general>
                <active>1</active>
                <page_size_number>20</page_size_number>
                <sidebar_position>sidebar-right</sidebar_position>
                <sidebar_question_number_left>5</sidebar_question_number_left>
                <sidebar_question_number_right>5</sidebar_question_number_right>
                <tag_number>20</tag_number>
            </general>		
        </faq>
    </default>		
    <modules>
        <Magestore_Faq>
            <version>0.3.0</version>
        </Magestore_Faq>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>Magestore_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Faq>
                    <files>
                        <default>Magestore_Faq.csv</default>
                    </files>
                </Magestore_Faq>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <faq_block_to_html_before>
                        <type>singleton</type>
                        <class>faq/observer</class>
                        <method>showLinks</method>
                    </faq_block_to_html_before>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <!-- <adminfaq>
                <use>admin</use>
                <args>
                    <module>Magestore_Faq</module>
                    <frontName>adminfaq</frontName>
                </args>
            </adminfaq> -->
            <adminhtml>
                <args>
                    <modules>
                        <Magestore_Faq before="Mage_Adminhtml">Magestore_Faq_Adminhtml</Magestore_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Magestore_Faq>
                    <files>
                        <default>Magestore_Faq.csv</default>
                    </files>
                </Magestore_Faq>
            </modules>
        </translate>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <faq>
                <class>Magestore_Faq_Model</class>
                <resourceModel>faq_mysql4</resourceModel>
            </faq>
            <faq_mysql4>
                <class>Magestore_Faq_Model_Mysql4</class>
                <entities>
                    <faq>
                        <table>faq</table>
                    </faq>
					
                    <category>
                        <table>faq_category</table>
                    </category>
					
                    <faqstore>
                        <table>faq_store</table>
                    </faqstore>	

                    <categorystore>
                        <table>faq_category_store</table>
                    </categorystore>					
					
                    <urlrewrite>
                        <table>core_url_rewrite</table>
                    </urlrewrite>
					<categoryvalue>
                        <table>faq_category_value</table>
                    </categoryvalue>
					<faqvalue>
                        <table>faq_value</table>
                    </faqvalue>	
                </entities>
            </faq_mysql4>
        </models>
        <resources>
            <faq_setup>
                <setup>
                    <module>Magestore_Faq</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
        <blocks>
            <faq>
                <class>Magestore_Faq_Block</class>
            </faq>
        </blocks>
        <helpers>
            <faq>
                <class>Magestore_Faq_Helper</class>
            </faq>
        </helpers>
    </global>
</config>